<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#C1A3D3DF">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_gravity="bottom"
        android:foregroundGravity="center|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="516dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="154dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginStart="152dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="149dp"
                android:fontFamily="@font/luckiest_guy"
                android:gravity="top"
                android:text="Niveles"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp" />

            <TableLayout
                android:layout_width="377dp"
                android:layout_height="253dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="401dp"
                    android:layout_height="61dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="356dp"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonNivel1"
                            android:layout_width="79dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 1"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel2"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 2"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel3"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 3"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonNivel4"
                            android:layout_width="87dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 4"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel5"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 5"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel6"
                            android:layout_width="87dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 6"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ButtonNivel7"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 7"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel8"
                            android:layout_width="83dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 8"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/ButtonNivel9"
                            android:layout_width="87dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#6FC7DD"
                            android:fontFamily="@font/luckiest_guy"
                            android:text="Nivel 9"
                            android:textColor="#1D33F1"
                            android:textSize="20dp" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Button" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="93dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="79dp"
            android:layout_height="82dp"
            android:layout_gravity="bottom|right|end"
            tools:srcCompat="@drawable/usuario" />
    </LinearLayout>


</FrameLayout>