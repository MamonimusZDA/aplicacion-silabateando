<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.MyApplication6484.FullscreenContainer"
    tools:context=".PantallaSilabateando">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9FFFFFFF"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="748dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="88dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/luckiest_guy"
                android:gravity="center_horizontal"
                android:text="Â¡Bienvenido a!"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/luckiest_guy"
                android:gravity="center_horizontal"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="494dp"
                android:layout_height="465dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/dummy_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:backgroundTint="#5C7B8C"
                android:fontFamily="@font/luckiest_guy"
                android:text="Empezar"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                app:iconTint="#FFFFFF" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>