<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pantallasilabateando">

    <fragment
        android:id="@+id/iniciosesion"
        android:name="com.example.myapplication6484.IniciarSesion"
        android:label="Iniciar sesion"
        tools:layout="@layout/inicio_sesion">
        <action
            android:id="@+id/action_iniciosesion_to_crearcuenta"
            app:destination="@id/crearcuenta" />
        <action
            android:id="@+id/action_iniciosesion_to_menu_niveles"
            app:destination="@id/menu_niveles" />
    </fragment>
    <fragment
        android:id="@+id/crearcuenta"
        android:name="com.example.myapplication6484.CrearCuenta"
        android:label="Crear cuenta"
        tools:layout="@layout/crear_cuenta">
        <action
            android:id="@+id/action_crearcuenta_to_iniciosesion"
            app:destination="@id/iniciosesion" />
    </fragment>
    <fragment
        android:id="@+id/pantallasilabateando"
        android:name="com.example.myapplication6484.PantallaSilabateando"
        android:label="SilabaTEAndo"
        tools:layout="@layout/pantalla_silabateando">
        <action
            android:id="@+id/action_pantallasilabateando_to_iniciosesion"
            app:destination="@id/iniciosesion" />
    </fragment>
    <fragment
        android:id="@+id/menu_niveles"
        android:name="com.example.myapplication6484.SeleccionNiveles"
        android:label="Menu niveles"
        tools:layout="@layout/seleccion_niveles" >
        <action
            android:id="@+id/action_menu_niveles_to_nivel1Casi"
            app:destination="@id/nivel1Casi" />
    </fragment>
    <fragment
        android:id="@+id/nivel1Casi"
        android:name="com.example.myapplication6484.nivel1Casi"
        android:label="Nivel 1"
        tools:layout="@layout/nivel_1" />

</navigation>